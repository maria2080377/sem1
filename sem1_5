#include <iostream>         //Задача 5
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");
	int a;
	cout << "Введите число: ";
	cin >> a;
	if (a % 3 == 0 && a%5==0) {
		cout << "Число делится на 3 и на 5";
	}
	else if (a%3==0) {
		cout << "Число делится на 3";
	}
	else if (a % 5 == 0) {
		cout << "Число делится на 5";
	}
	else {
		cout << "Число не делится на 5 и на 3";
	}


	return 0;
}
